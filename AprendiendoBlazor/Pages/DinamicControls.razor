@page "/controls"

<PageTitle>Controles</PageTitle>

<h2>Controles dinámicos</h2>

<div class="mb-3">
    <label for="departamentos" class="form-label">Departamentos</label>
    <InputTagger Id="departamentos" Placeholder="Departamento" ValueChanged="OnDepartamentoChange"></InputTagger>
</div>

<div class="mb-3">
    <label for="ciudades" class="form-label">Ciudades</label>
    <InputTagger Id="ciudades" Placeholder="Ciudad" @bind-Value="ciudades"></InputTagger>
</div>

<h3>Tags seleccionados</h3>
<div><strong>Departamentos:</strong> @departamentos</div>
<div><strong>Ciudades:</strong> @ciudades</div><div></div>

<p>@mensaje</p>

@code {
    private string departamentos;
    private string ciudades;
    private string mensaje;

    private void OnDepartamentoChange(string value)
    {
        departamentos = value;
        mensaje = $"El componente Departamento se actualizó con un texto de largo {value.Length}";
    }
}
